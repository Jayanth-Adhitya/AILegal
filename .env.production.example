# Production Environment Variables for AI Legal Assistant
# Copy this file to .env.production and fill in your values

# ============================================
# REQUIRED: Google API Configuration
# ============================================
GOOGLE_API_KEY=your_google_api_key_here

# ============================================
# Backend Configuration
# ============================================
GEMINI_MODEL=gemini-2.5-flash
EMBEDDING_MODEL=models/gemini-embedding-001
TEMPERATURE=0.1
MAX_OUTPUT_TOKENS=8192

# ============================================
# Database & Storage
# ============================================
CHROMA_COLLECTION_NAME=legal_policies
MAX_FILE_SIZE_MB=50

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_K=3

# Batch Processing
BATCH_MODE=true
MAX_BATCH_SIZE=50
REQUESTS_PER_MINUTE=15
REQUESTS_PER_DAY=250

# ============================================
# Ports (using non-default ports to avoid conflicts)
# ============================================
BACKEND_PORT=8080
FRONTEND_PORT=3001

# ============================================
# Frontend API URL
# ============================================
# For local development
# NEXT_PUBLIC_API_URL=http://localhost:8000

# For production (replace with your actual domain)
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# For Docker internal networking
NEXT_PUBLIC_API_URL=http://backend:8000
